<div class="container">
  <%= form_with(model: @user, local: true, html: { class: "turbo-frame" }) do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :role, class: "form-label" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, { prompt: 'Select Role' }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :phone_number, class: "form-label" %>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :state, class: "form-label" %>
      <%= f.select :state, options_for_select(Location.pluck(:state).uniq), { prompt: 'Select State' }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :city, class: "form-label" %>
      <%= f.select :city, options_for_select(Location.pluck(:city).uniq), { prompt: 'Select City' }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :pincode, class: "form-label" %>
      <%= f.text_field :pincode, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
      <% unless current_user %>
        <%= link_to 'Login', new_user_session_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  <% end %>
</div>
